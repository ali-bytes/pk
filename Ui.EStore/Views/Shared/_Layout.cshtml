    {

        <li class="first-menu third">
            @{
        if (CultureHelper.GetLang() == Enums.Lang.Ar)
        {

            <a href="/Product/MainCategoryView/@mainCategory.Id-@mainCategory.Name.ClearString()">@mainCategory.Name</a>
